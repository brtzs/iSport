<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroung_main"
    tools:context="com.android.isport.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <android.widget.TextView
                android:layout_width="282dp"
                android:layout_height="100dp"
                android:background="@drawable/isport_bar"
                android:layout_marginTop="40sp"
                android:layout_marginLeft="35sp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.widget.TextView
                    android:layout_width="305dp"
                    android:layout_height="90dp"
                    android:background="#ffffff"
                    android:layout_marginTop="2sp"
                    android:layout_marginLeft="25sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.widget.ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="45dp"
                        android:padding="10dp"
                        android:src="@drawable/begin_icon_64px"/>

                    <android.widget.TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="开始运动"
                        android:textSize="26dp"
                        android:textColor="#888888"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="30dp"/>

                </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.TextView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="35sp"
                android:background="@drawable/yuema_icon"/>

            <android.widget.TextView
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="2sp"
                android:background="@drawable/sport_helper"/>
        </LinearLayout>

        <android.widget.TextView
            android:layout_width="282dp"
            android:layout_height="120dp"
            android:layout_marginTop="2sp"
            android:layout_marginLeft="35sp"
            android:background="@drawable/select_difficult_icon"/>

    </LinearLayout>
</RelativeLayout>
